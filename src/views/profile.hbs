<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js">
        
        <link rel="stylesheet" href="/css/style.css" />
        <link rel="stylesheet" href="/css/profile.css" />
    </head>
    <body>
    <div class="profile-wrapper">
        <div class="container profile-container">
            <a href="/" class="go-to-home" id="go-to-home"><i class="fa fa-arrow-left"></i> Go to home</a>
            <div class="row profile-row">
                <div class="col-md-3">
                    <div class="main-profile">
                        <div class="img-wrapper">
                            <img src="/images/users/2/guruprasad.jpg" alt="">
                        </div>
                        <h3 class="profile-username">Guru Pandit</h3>
                        <button class="btn btn-green btn-small" onclick="openEditModal()">Edit profile</button>
                    </div>
                    <div class="profile-menu mt-3">
                        <h3 class="profile-menu-heading">Activity</h3>
                        <ul class="profile-menu-links">
                            <li class="menu-link active"><a href="#profile-reviews">Reviews</a></li>
                            <li class="menu-link"><a href="#profile-photos">Photos</a></li>
                        </ul>
                    </div>
                     <div class="profile-menu mt-3">
                        <h3 class="profile-menu-heading">Ordering</h3>
                        <ul class="profile-menu-links">
                            <li class="menu-link"><a href="#profile-order">Order history</a></li>
                            <li class="menu-link"><a href="#profile-addresses">My addresses</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9 pl-1 pr-3">
                    <div class="profile-content-wrapper">
                        {{!-- Reviews --}}
                        <div id="profile-reviews" class="profile-content active">
                            <h3 class="profile-content-heading">Reviews</h3>
                            <div class="profile-review-container">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="profile-review-wrapper">
                                            <div class="review-rest">
                                                <h4 class="review-rest-heading">Royal Baithak</h4>
                                                <span>4.5 <i class="fa fa-star"></i></span>
                                            </div>
                                            <p class="review-rest-address">Tilak Lane</p>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="profile-review-wrapper">
                                            <div class="review-rest">
                                                <h4 class="review-rest-heading">Royal Baithak</h4>
                                                <span>4.5 <i class="fa fa-star"></i></span>
                                            </div>
                                            <p class="review-rest-address">Tilak Lane</p>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="profile-review-wrapper">
                                            <div class="review-rest">
                                                <h4 class="review-rest-heading">Royal Baithak</h4>
                                                <span>4.5 <i class="fa fa-star"></i></span>
                                            </div>
                                            <p class="review-rest-address">Tilak Lane</p>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="profile-review-wrapper">
                                            <div class="review-rest">
                                                <h4 class="review-rest-heading">Royal Baithak</h4>
                                                <span>4.5 <i class="fa fa-star"></i></span>
                                            </div>
                                            <p class="review-rest-address">Tilak Lane</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{!-- Photos --}}
                        <div id="profile-photos" class="profile-content">
                            <h3 class="profile-content-heading">Photos</h3>
                        </div>
                        {{!-- Order history --}}
                        <div id="profile-order" class="profile-content">
                            <h3 class="profile-content-heading">Order history</h3>
                            <div class="row">
                                    <div class="col-6">
                                        <div class="profile-order-wrapper">
                                            <div class="profile-order-date-price">
                                                <h4 class="order-date">20-02-1009</h4>
                                                <h3 class="order-price">&#8377; 499</h3>
                                            </div>
                                            <div class="profile-order-rest">
                                                <div class="order-rest-img">
                                                    <img src="/images/restaurants/1/bhindi.jpg" alt="images">
                                                </div>
                                                <div class="order-rest-name">
                                                    <h4 class="name">Royal Baithak</h4>
                                                    <p class="address">Tilak Lane</p>
                                                </div>
                                            </div>
                                            <div class="profile-order-details">
                                                <span class="order-detail-link">View order details <i class="fa fa-caret-right"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="profile-order-wrapper">
                                            <div class="profile-order-date-price">
                                                <h4 class="order-date">20-02-1009</h4>
                                                <h3 class="order-price">&#8377; 499</h3>
                                            </div>
                                            <div class="profile-order-rest">
                                                <div class="order-rest-img">
                                                    <img src="/images/restaurants/1/bhindi.jpg" alt="images">
                                                </div>
                                                <div class="order-rest-name">
                                                    <h4 class="name">Royal Baithak</h4>
                                                    <p class="address">Tilak Lane</p>
                                                </div>
                                            </div>
                                            <div class="profile-order-details">
                                                <span class="order-detail-link">View order details <i class="fa fa-caret-right"></i></span>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                        {{!-- My addresses --}}
                        <div id="profile-addresses" class="profile-content">
                            <h3 class="profile-content-heading">My addresses</h3>
                            <div class="row">
                                <div class="col-4">
                                    <div class="profile-address-wrapper">
                                        <div class="address-content">
                                            <h4 class="address-title">Home</h4>
                                            <p class="address-text">Tilak lane, Ratnagiri</p>
                                        </div>
                                        <div class="address-links">
                                            <span class="address-edit-btn">Edit <i class="fa fa-caret-right"></i></span>
                                            <i class="fa fa-trash address-delete-btn"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="profile-address-wrapper">
                                        <div class="address-content">
                                            <h4 class="address-title">Home</h4>
                                            <p class="address-text">Tilak lane, Ratnagiri</p>
                                        </div>
                                        <div class="address-links">
                                            <span class="address-edit-btn">Edit <i class="fa fa-caret-right"></i></span>
                                            <i class="fa fa-trash address-delete-btn"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="profile-address-wrapper">
                                        <div class="address-content">
                                            <h4 class="address-title">Home</h4>
                                            <p class="address-text">Tilak lane, Ratnagiri</p>
                                        </div>
                                        <div class="address-links">
                                            <span class="address-edit-btn">Edit <i class="fa fa-caret-right"></i></span>
                                            <i class="fa fa-trash address-delete-btn"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="add-address-btn">
                                        <i class="fa fa-plus"></i>
                                        <span>Add address</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Edit profile modal --}}
            <div class="edit-modal-container" id="edit-modal-container">
                <div class="edit-modal-wrapper">
                    <div class="close-modal-wrapper">
                        <i id="close-edit-modal" class="fa fa-close btn-circular close-edit-modal" onclick="closeEditModal()"></i>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="avatar-upload">
                                <div class="avatar-edit">
                                    <input type='file' id="imageUpload" accept=".png, .jpg, .jpeg" />
                                    <label for="imageUpload"></label>
                                </div>
                                <div class="avatar-preview">
                                    <div id="imagePreview" style="background-image: url(http://i.pravatar.cc/500?img=7);">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 px-4 my-1">
                            <div class="edit-input-container">
                                <label class="edit-input-label" for="edit-fname">First name</label>
                                <i class="fa fa-user edit-input-icon"></i>
                                <input type="text" class="edit-input" id="edit-fname" placeholder="Guru">
                            </div>
                        </div>
                        <div class="col-6 px-4 my-1">
                            <div class="edit-input-container">
                                <label class="edit-input-label" for="edit-lname">Last name</label>
                                <i class="fa fa-user edit-input-icon"></i>
                                <input type="text" class="edit-input" id="edit-lname" placeholder="Pandit">
                            </div>
                        </div>
                        <div class="col-12 px-4 my-1">
                            <div class="edit-input-container">
                                <label class="edit-input-label" for="edit-email">Email</label>
                                <i class="fa fa-envelope edit-input-icon"></i>
                                <input type="email" class="edit-input" id="edit-email" placeholder="gurupandit28@gmail.com">
                            </div>
                        </div>
                        <div class="col-12 px-4 my-1">
                            <div class="edit-input-container">
                                <label class="edit-input-label" for="edit-contact">Contact</label>
                                <i class="fa fa-phone edit-input-icon"></i>
                                <input type="text" class="edit-input" id="edit-contact" placeholder="7776088638">
                            </div>
                        </div>
                        <div class="col-12 px-4 my-1 d-flex align-items-center justify-content-center">
                            <button class="btn btn-green">Save</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"> </script>
    <script src="/js/profile.js"> </script>
    </body>
</html>
