      <body>
            <div class="modal-content modal-content-error" id="modal-content">
                {{!-- <i class="fa fa-times btn-circular" id="close-icon"></i> --}}
                <div class="modal-cont modal-cont-error">
                      <div class="modal-icon">
                          <i class="fa fa-thumbs-down"></i>
                      </div>
                      <h3 class="modal-head" id="modal-text">Error</h3>
                      <p class="modal-text" id="modal-text">{{message}}</p>
                      <a href={{redirectTo}} class="modal-btn modal-btn-red">Continue</a>      
                </div> 
            </div>        
      </body>
