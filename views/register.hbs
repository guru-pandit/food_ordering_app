<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<!-- CSS only -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/register.css" />
    <link rel="stylesheet" href="/css/modal.css" />
    <title>Register </title>
  </head>
<body>
 
	<div class="container" id="container">
		<div class="form-container sign-in-container">
			<form action="#" id="signup-form">
				<h1>Sign up</h1>
				<div class="social-container">
					<a href="#" class="social-link"><i class="fa fa-facebook"></i></a>
					<a href="#" class="social-link"><i class="fa fa-google"></i></a>
					<a href="#" class="social-link"><i class="fa fa-twitter"></i></a>
				</div>
				<span>or use your account</span>
				<div class="row">
				<div class="col">
					<input type="text" id="fname" placeholder="First name" aria-label="First name">
				</div>
				<div class="col">
					<input type="text" id="lname" placeholder="Last name" aria-label="Last name">
				</div>
				</div>
				<input type="email" placeholder="Email" id="email" />
				<input type="password" placeholder="Password" id="password" />
				<input type="password" placeholder="Confirm Password" id="cpassword" />
				<button type="submit" id="signup" class="btn btn-login" >Sign Up</input>
			</form>
		</div>

		{{!-- Overlay  --}}
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-right">
					<h1>Welcome!</h1>
					<p> to our site </p>
					<a class="btn btn-register" id="signin" href="/api/v1/login">Sign In</a>
				</div>
			</div>
		</div>
	</div>

	<!-- The Modal -->
	<div id="myModal" class="modal">
		<!-- Modal content -->
		<div class="modal-content">
			<i class="fa fa-times" id="close"></i>
			<h3 class="modal-text" id="modal-text"></h3>
		</div>
	</div>


	<script src="https://cdn.jsdelivr.net/npm/axios@0.21.4/dist/axios.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script>
		let modal = document.getElementById("myModal");
		let closeIcon = document.getElementById("close");
		let baseUrl = `${window.location.protocol}//${window.location.hostname}:${window.location.port}`;

		// Function to open modal
		function openModal(msg){
			$("#modal-text").text(msg)
			modal.style.display = "block"
		}

		// When the user clicks on <span> (x), close the modal
		closeIcon.onclick = function() {
			//console.log("clicked")
			modal.style.display = "none";
		}

		// When the user clicks anywhere outside of the modal, close it
		window.onclick = function(event) {
			// console.log(event)
			// console.log(event.target)
			if (event.target == modal) {
				modal.style.display = "none";
			}
		}

		$("#signup-form").submit(function(e){
            let fname = $("#fname").val();
            let lname = $("#lname").val();
			let email = $("#email").val();
			let password = $("#password").val() 
            let cpassword = $("#cpassword").val();

			let url = `${baseUrl}/api/v1/register`
			let body = {
                firstName: fname,
                lastName: lname,
                email: email,
                password: password,
                confirmPassword:cpassword
           	}

           	// console.log(body)
           	axios.post(url,body).then((res)=>{
				// console.log(res.data)
				// alert(res.data.message)
				openModal(res.data.message)
			}).catch((err)=>{
				// console.log(err.response.data)
				// alert(err)
				openModal(err.response.data.error)
			})
		})
	</script>
</body>
</html>

